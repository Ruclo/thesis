+def wait_for_common_instancetypes_deployed(unprivileged_client):
+    """
+    Wait for at least one common instancetype to be deployed in the cluster.
+
+    Args:
+        unprivileged_client (DynamicClient): Dynamic client object
+
+    Raises:
+        TimeoutExpiredError: If no instancetypes are deployed within timeout
+    """
+    LOGGER.info("Waiting for common instancetypes to be deployed")
+    sample = None
+    try:
+        for sample in TimeoutSampler(
+            wait_timeout=TIMEOUT_5MIN,
+            sleep=TIMEOUT_5SEC,
+            func=lambda: list(
+                VirtualMachineClusterInstancetype.get(
+                    client=unprivileged_client,
+                    label_selector=COMMON_INSTANCETYPE_SELECTOR,
+                )
+            ),
+        ):
+            if sample:
+                LOGGER.info(f"Common instancetypes deployed: {len(sample)} found")
+                return
+    except TimeoutExpiredError:
+        LOGGER.error("No common instancetypes found after timeout")
+        raise
+
+
+def set_common_instancetypes_deployment_spec(
+    admin_client,
+    hco_namespace,
+    hyperconverged_resource,
+    value,
+):
+    """
+    Set the commonInstancetypesDeployment spec field in HCO CR.
+
+    Args:
+        admin_client (DynamicClient): Dynamic client object
+        hco_namespace (Namespace): HCO namespace object
+        hyperconverged_resource (HyperConverged): HyperConverged resource object
+        value (str): Value to set (Enabled or Disabled)
+    """
+    LOGGER.info(f"Setting commonInstancetypesDeployment to {value}")
+    editor = ResourceEditor(
+        patches={hyperconverged_resource: {"spec": {COMMON_INSTANCETYPES_DEPLOYMENT_SPEC_KEY: value}}}
+    )
+    editor.update(backup_resources=True)
+    wait_for_hco_conditions(admin_client=admin_client, hco_namespace=hco_namespace)
