+@pytest.mark.virt
+@pytest.mark.tier1
+@pytest.mark.polarion("CNV-61271")
+class TestVNCScreenshotStability:
+    """
+    Test VNC console stability when screenshot functionality is active.
+
+    These tests verify that the fix for CNV-60117 prevents VNC disconnections
+    when both thumbnail (screenshot) and full-screen VNC are active.
+    """
+
+    def test_vnc_stability_with_concurrent_screenshot(self, running_fedora_vm):
+        """
+        Test VNC connection remains stable when screenshots are taken.
+
+        Scenario 1: VNC Stability with Concurrent Thumbnail
+
+        Preconditions:
+            - VM running with VNC console available
+
+        Steps:
+            1. Open VNC connection to VM
+            2. Take multiple screenshots while VNC is connected
+            3. Wait and monitor VNC connection
+            4. Verify VNC remains connected throughout
+
+        Expected Result:
+            - VNC remains connected
+            - No disconnects occur
+            - Screenshots are successfully captured
+
+        Priority: P0
+        """
+        LOGGER.info(f"Testing VNC stability with concurrent screenshots for VM {running_fedora_vm.name}")
+
+        vnc_disconnected = False
+        screenshots_taken = 0
+        expected_screenshots = 5
+
+        with VNCConnection(vm=running_fedora_vm) as vnc_connection:
+            LOGGER.info("VNC connection established successfully")
+
+            for screenshot_count in range(expected_screenshots):
+                try:
+                    LOGGER.info(f"Taking screenshot {screenshot_count + 1}/{expected_screenshots}")
+                    collect_vnc_screenshot_for_vms(
+                        vm_name=running_fedora_vm.name,
+                        vm_namespace=running_fedora_vm.namespace,
+                    )
+                    screenshots_taken += 1
+
+                    if vnc_connection.child.isalive():
+                        LOGGER.info(f"VNC connection still alive after screenshot {screenshot_count + 1}")
+                    else:
+                        LOGGER.error(f"VNC connection died after screenshot {screenshot_count + 1}")
+                        vnc_disconnected = True
+                        break
+
+                    time.sleep(10)
+
+                except Exception as exc:
+                    LOGGER.error(f"Screenshot {screenshot_count + 1} failed: {exc}")
+
+            time.sleep(TIMEOUT_1MIN)
+
+            if vnc_connection.child.isalive():
+                LOGGER.info("VNC connection remained stable throughout test")
+            else:
+                LOGGER.error("VNC connection was lost during test")
+                vnc_disconnected = True
+
+        assert not vnc_disconnected, "VNC connection should remain stable when screenshots are taken"
+        assert screenshots_taken == expected_screenshots, (
+            f"Should have taken {expected_screenshots} screenshots, but only took {screenshots_taken}"
+        )
+
+    def test_screenshot_without_vnc_connection(self, running_fedora_vm):
+        """
+        Test screenshot API works without establishing VNC connection.
+
+        Scenario 2: Screenshot API Without VNC Connection
+
+        Preconditions:
+            - VM running
+            - No VNC clients connected
+
+        Steps:
+            1. Ensure no VNC connections are active
+            2. Call vnc/screenshot API endpoint
+            3. Verify screenshot returned successfully
+            4. Verify no VNC connection was established
+
+        Expected Result:
+            - Screenshot returned without VNC
+            - Screenshot file exists and is valid
+
+        Priority: P0
+        """
+        LOGGER.info(f"Testing screenshot without VNC connection for VM {running_fedora_vm.name}")
+
+        base_dir = get_data_collector_base_directory()
+        screenshot_file = f"{base_dir}/{running_fedora_vm.namespace}-{running_fedora_vm.name}-no-vnc.png"
+
+        try:
+            LOGGER.info("Taking screenshot without VNC connection")
+            run_virtctl_command(
+                command=shlex.split(f"vnc screenshot {running_fedora_vm.name} -f {screenshot_file}"),
+                namespace=running_fedora_vm.namespace,
+            )
+
+            assert os.path.exists(screenshot_file), f"Screenshot file should exist at {screenshot_file}"
+            assert os.path.getsize(screenshot_file) > 0, "Screenshot file should not be empty"
+
+            LOGGER.info(f"Screenshot successfully created at {screenshot_file}")
+
+        except Exception as exc:
+            pytest.fail(f"Screenshot failed without VNC connection: {exc}")
