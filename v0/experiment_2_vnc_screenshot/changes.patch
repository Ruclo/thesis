+
+            file_size = os.path.getsize(screenshot_file)
+            assert file_size > 1024, f"Screenshot file size ({file_size} bytes) seems too small"
+
+            result = run(["file", screenshot_file], capture_output=True, text=True, check=True)
+            assert "PNG" in result.stdout, f"Screenshot should be PNG format, got: {result.stdout}"
+
+            LOGGER.info(f"Screenshot quality verified: {file_size} bytes, PNG format")
+
+        except Exception as exc:
+            pytest.fail(f"Screenshot quality verification failed: {exc}")
