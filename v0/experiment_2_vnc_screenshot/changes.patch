+    def test_thumbnail_updates_without_vnc_impact(self, running_fedora_vm):
+        """
+        Test thumbnail updates do not impact active VNC connection.
+
+        Scenario 4: Thumbnail Updates Without VNC Impact
+
+        Preconditions:
+            - Full-screen VNC active
+
+        Steps:
+            1. Open full-screen VNC connection
+            2. Take multiple screenshots simulating thumbnail refreshes
+            3. Monitor VNC connection status
+            4. Verify VNC connection remains active
+
+        Expected Result:
+            - VNC connection unaffected by thumbnail refreshes
+            - All screenshots successful
+
+        Priority: P0
+        """
+        LOGGER.info(f"Testing VNC stability during thumbnail updates for VM {running_fedora_vm.name}")
+
+        vnc_disconnected = False
+        thumbnail_refreshes = 10
+        successful_refreshes = 0
+
+        with VNCConnection(vm=running_fedora_vm) as vnc_connection:
+            LOGGER.info("Full-screen VNC connection established")
+
+            for refresh_count in range(thumbnail_refreshes):
+                try:
+                    LOGGER.info(f"Simulating thumbnail refresh {refresh_count + 1}/{thumbnail_refreshes}")
+
+                    collect_vnc_screenshot_for_vms(
+                        vm_name=running_fedora_vm.name,
+                        vm_namespace=running_fedora_vm.namespace,
+                    )
+                    successful_refreshes += 1
+
+                    if not vnc_connection.child.isalive():
+                        LOGGER.error(f"VNC connection died during thumbnail refresh {refresh_count + 1}")
+                        vnc_disconnected = True
+                        break
+
+                    time.sleep(5)
+
+                except Exception as exc:
+                    LOGGER.error(f"Thumbnail refresh {refresh_count + 1} failed: {exc}")
+
+            if vnc_connection.child.isalive():
+                LOGGER.info("VNC connection remained stable during all thumbnail refreshes")
+            else:
+                vnc_disconnected = True
+
+        assert not vnc_disconnected, "VNC connection should remain stable during thumbnail refreshes"
+        assert successful_refreshes == thumbnail_refreshes, (
+            f"All {thumbnail_refreshes} thumbnail refreshes should succeed, but only {successful_refreshes} did"
+        )
+
