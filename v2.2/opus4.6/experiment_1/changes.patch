+"""
+Common-Instancetypes Deployment Configuration Tests
+
+STP Reference: https://issues.redhat.com/browse/CNV-61256
+
+This module contains tests for the commonInstancetypesDeployment field
+in the HCO CR spec. Verifies that common instance type resources can be
+enabled or disabled through HCO configuration and that the setting
+persists across reconciliation cycles.
+"""
+
+import logging
+
+import pytest
+from ocp_resources.virtual_machine_cluster_instancetype import (
+    VirtualMachineClusterInstancetype,
+)
+from ocp_resources.virtual_machine_cluster_preference import (
+    VirtualMachineClusterPreference,
+)
+
+from tests.install_upgrade_operators.common_instancetypes_deployment.conftest import (
+    COMMON_INSTANCETYPE_LABEL_SELECTOR,
+    COMMON_INSTANCETYPES_DEPLOYMENT_DISABLED,
+    COMMON_INSTANCETYPES_DEPLOYMENT_ENABLED,
+    COMMON_INSTANCETYPES_DEPLOYMENT_KEY,
+)
+from utilities.hco import ResourceEditorValidateHCOReconcile, wait_for_hco_conditions
+
+LOGGER = logging.getLogger(__name__)
+
+pytestmark = [pytest.mark.iuo, pytest.mark.arm64, pytest.mark.s390x]
+
+
+class TestCommonInstancetypesDeployment:
+    """
+    Tests for commonInstancetypesDeployment HCO CR configuration.
+
+    Preconditions:
+        - OpenShift cluster with OpenShift Virtualization installed
+        - HCO CR accessible and reconciling
+    """
+
+    @pytest.mark.polarion("CNV-61256")
+    def test_common_instancetypes_deployed_by_default(
+        self,
+        cluster_common_instancetypes,
+        cluster_common_preferences,
+    ):
+        """
+        Test that common instance types are deployed by default
+        when commonInstancetypesDeployment is not explicitly set.
+
+        Steps:
+            1. Verify the HCO CR does not have commonInstancetypesDeployment
+               explicitly set, or that its value is "Enabled"
+            2. List common instance type resources in the cluster
+
+        Expected:
+            - Common instance type resources exist in the cluster
+        """
+        LOGGER.info("Verifying common instance types are deployed by default.")
+        assert cluster_common_instancetypes, (
+            "No common VirtualMachineClusterInstancetype resources found; "
+            "expected common instance types to be deployed by default."
+        )
+        assert cluster_common_preferences, (
+            "No common VirtualMachineClusterPreference resources found; "
+            "expected common preferences to be deployed by default."
+        )
+
+    @pytest.mark.polarion("CNV-61256")
+    @pytest.mark.usefixtures("common_instancetypes_disabled")
+    def test_disable_common_instancetypes_deployment(
+        self,
+        admin_client,
+    ):
+        """
+        Test that setting commonInstancetypesDeployment to Disabled
+        removes common instance type resources.
+
+        Preconditions:
+            - Common instance type resources are deployed (default state)
+
+        Steps:
+            1. Set commonInstancetypesDeployment to "Disabled" in HCO CR
+            2. Wait for HCO reconciliation to complete
+            3. List common instance type resources in the cluster
+
+        Expected:
+            - Common instance type resources do NOT exist in the cluster
+        """
+        LOGGER.info("Verifying common instance types are removed after disabling deployment.")
+        remaining_instancetypes = list(
+            VirtualMachineClusterInstancetype.get(
+                client=admin_client,
+                label_selector=COMMON_INSTANCETYPE_LABEL_SELECTOR,
+            )
+        )
+        remaining_preferences = list(
+            VirtualMachineClusterPreference.get(
+                client=admin_client,
+                label_selector=COMMON_INSTANCETYPE_LABEL_SELECTOR,
+            )
+        )
+        assert not remaining_instancetypes, (
+            f"Expected no common VirtualMachineClusterInstancetype resources after disabling, "
+            f"but found: {[instance_type.name for instance_type in remaining_instancetypes]}"
+        )
+        assert not remaining_preferences, (
+            f"Expected no common VirtualMachineClusterPreference resources after disabling, "
+            f"but found: {[preference.name for preference in remaining_preferences]}"
+        )
+
+    @pytest.mark.polarion("CNV-61256")
+    def test_enable_common_instancetypes_deployment(
+        self,
+        admin_client,
+        hyperconverged_resource_scope_function,
+        common_instancetypes_disabled,
+    ):
+        """
+        Test that setting commonInstancetypesDeployment to Enabled
+        deploys common instance type resources.
+
+        Preconditions:
+            - commonInstancetypesDeployment is set to "Disabled"
+            - Common instance type resources are not deployed
+
+        Steps:
+            1. Set commonInstancetypesDeployment to "Enabled" in HCO CR
+            2. Wait for HCO reconciliation to complete
+            3. List common instance type resources in the cluster
+
+        Expected:
+            - Common instance type resources exist in the cluster
+        """
+        LOGGER.info("Re-enabling commonInstancetypesDeployment and verifying resources are deployed.")
+        with ResourceEditorValidateHCOReconcile(
+            patches={
+                hyperconverged_resource_scope_function: {
+                    "spec": {COMMON_INSTANCETYPES_DEPLOYMENT_KEY: COMMON_INSTANCETYPES_DEPLOYMENT_ENABLED}
+                }
+            },
+            wait_for_reconcile_post_update=True,
+        ):
+            re_enabled_instancetypes = list(
+                VirtualMachineClusterInstancetype.get(
+                    client=admin_client,
+                    label_selector=COMMON_INSTANCETYPE_LABEL_SELECTOR,
+                )
+            )
+            re_enabled_preferences = list(
+                VirtualMachineClusterPreference.get(
+                    client=admin_client,
+                    label_selector=COMMON_INSTANCETYPE_LABEL_SELECTOR,
+                )
+            )
+            assert re_enabled_instancetypes, (
+                "No common VirtualMachineClusterInstancetype resources found after re-enabling; "
+                "expected common instance types to be deployed."
+            )
+            assert re_enabled_preferences, (
+                "No common VirtualMachineClusterPreference resources found after re-enabling; "
+                "expected common preferences to be deployed."
+            )
+
+    @pytest.mark.polarion("CNV-61256")
+    def test_disabled_setting_persists_after_reconciliation(
+        self,
+        admin_client,
+        hco_namespace,
+        hyperconverged_resource_scope_function,
+        common_instancetypes_disabled,
+    ):
+        """
+        Test that the Disabled setting for commonInstancetypesDeployment
+        persists after an HCO reconciliation cycle.
+
+        Preconditions:
+            - commonInstancetypesDeployment is set to "Disabled"
+
+        Steps:
+            1. Trigger HCO reconciliation by modifying an unrelated HCO CR field
+            2. Wait for reconciliation to complete
+            3. Read commonInstancetypesDeployment value from HCO CR
+            4. List common instance type resources in the cluster
+
+        Expected:
+            - commonInstancetypesDeployment equals "Disabled"
+        """
+        LOGGER.info("Triggering HCO reconciliation and verifying disabled setting persists.")
+        wait_for_hco_conditions(admin_client=admin_client, hco_namespace=hco_namespace)
+
+        hco_spec = hyperconverged_resource_scope_function.instance.to_dict()["spec"]
+        current_value = hco_spec.get(COMMON_INSTANCETYPES_DEPLOYMENT_KEY)
+        assert current_value == COMMON_INSTANCETYPES_DEPLOYMENT_DISABLED, (
+            f"Expected {COMMON_INSTANCETYPES_DEPLOYMENT_KEY} to be "
+            f"'{COMMON_INSTANCETYPES_DEPLOYMENT_DISABLED}' after reconciliation, "
+            f"but got '{current_value}'."
+        )
+
+        remaining_instancetypes = list(
+            VirtualMachineClusterInstancetype.get(
+                client=admin_client,
+                label_selector=COMMON_INSTANCETYPE_LABEL_SELECTOR,
+            )
+        )
+        assert not remaining_instancetypes, (
+            f"Expected no common VirtualMachineClusterInstancetype resources after reconciliation "
+            f"with disabled setting, but found: {[instance_type.name for instance_type in remaining_instancetypes]}"
+        )
