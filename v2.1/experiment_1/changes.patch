+"""
+Test CommonInstancetypesDeployment configuration in HCO
+
+This test suite verifies the ability to enable and disable
+common-instancetypes deployment via HCO configuration.
+
+Related Jira: CNV-61256, CNV-59564
+"""
+
+import logging
+
+import pytest
+from ocp_resources.resource import Resource
+from ocp_resources.virtual_machine_cluster_instancetype import VirtualMachineClusterInstancetype
+from timeout_sampler import TimeoutExpiredError, TimeoutSampler
+
+from utilities.constants import TIMEOUT_5MIN, TIMEOUT_10MIN
+from utilities.hco import ResourceEditorValidateHCOReconcile, wait_for_hco_conditions
+from utilities.infra import get_hyperconverged_resource
+
+LOGGER = logging.getLogger(__name__)
+
+COMMON_INSTANCETYPE_SELECTOR = f"{Resource.ApiGroup.INSTANCETYPE_KUBEVIRT_IO}/vendor=redhat.com"
+COMMON_INSTANCETYPES_DEPLOYMENT_ENABLED = "Enabled"
+COMMON_INSTANCETYPES_DEPLOYMENT_DISABLED = "Disabled"
+
+
+def get_common_instancetypes(admin_client):
+    """
+    Get list of common (Red Hat provided) instancetypes.
+
+    Args:
+        admin_client: Admin client for cluster operations
+
+    Returns:
+        list: List of VirtualMachineClusterInstancetype resources
+    """
+    return list(
+        VirtualMachineClusterInstancetype.get(
+            client=admin_client,
+            label_selector=COMMON_INSTANCETYPE_SELECTOR,
+        )
+    )
+
+
+def wait_for_common_instancetypes_state(admin_client, expected_present, timeout=TIMEOUT_10MIN):
+    """
+    Wait for common-instancetypes to reach expected state.
+
+    Args:
+        admin_client: Admin client for cluster operations
+        expected_present (bool): True if instancetypes should exist, False if should be absent
+        timeout (int): Maximum wait time in seconds
+
+    Raises:
+        TimeoutExpiredError: If expected state not reached within timeout
+    """
+    LOGGER.info(f"Waiting for common-instancetypes to be {'present' if expected_present else 'absent'}")
+    sampler = TimeoutSampler(
+        wait_timeout=timeout,
+        sleep=10,
+        func=get_common_instancetypes,
+        admin_client=admin_client,
+    )
+    try:
+        for sample in sampler:
+            instancetypes_present = len(sample) > 0
+            if instancetypes_present == expected_present:
+                LOGGER.info(
+                    f"Common-instancetypes state verified: "
+                    f"{'present' if expected_present else 'absent'} (count: {len(sample)})"
+                )
+                return
+    except TimeoutExpiredError:
+        LOGGER.error(
+            f"Timeout waiting for common-instancetypes to be "
+            f"{'present' if expected_present else 'absent'}"
+        )
+        raise
+
+
+@pytest.fixture()
+def hco_with_common_instancetypes_disabled(admin_client, hco_namespace):
+    """
+    Disable common-instancetypes deployment via HCO CR.
+
+    Yields HCO resource with commonInstancetypesDeployment set to Disabled.
+    Restores original configuration on cleanup.
+    """
+    hco_resource = get_hyperconverged_resource(client=admin_client, hco_ns_name=hco_namespace.name)
+    LOGGER.info("Disabling common-instancetypes deployment via HCO CR")
+
+    with ResourceEditorValidateHCOReconcile(
+        patches={hco_resource: {"spec": {"commonInstancetypesDeployment": COMMON_INSTANCETYPES_DEPLOYMENT_DISABLED}}},
+        wait_for_reconcile_post_update=True,
+    ):
+        wait_for_common_instancetypes_state(admin_client=admin_client, expected_present=False)
+        yield hco_resource
+
+    LOGGER.info("Restoring common-instancetypes deployment (cleanup)")
+    wait_for_common_instancetypes_state(admin_client=admin_client, expected_present=True)
+
+
+@pytest.fixture()
+def hco_with_common_instancetypes_enabled(admin_client, hco_namespace):
+    """
+    Enable common-instancetypes deployment via HCO CR.
+
+    Yields HCO resource with commonInstancetypesDeployment set to Enabled.
+    """
+    hco_resource = get_hyperconverged_resource(client=admin_client, hco_ns_name=hco_namespace.name)
+    LOGGER.info("Enabling common-instancetypes deployment via HCO CR")
+
+    with ResourceEditorValidateHCOReconcile(
+        patches={hco_resource: {"spec": {"commonInstancetypesDeployment": COMMON_INSTANCETYPES_DEPLOYMENT_ENABLED}}},
+        wait_for_reconcile_post_update=True,
+    ):
+        wait_for_common_instancetypes_state(admin_client=admin_client, expected_present=True)
+        yield hco_resource
+
+
+pytestmark = [pytest.mark.infrastructure, pytest.mark.gating]
+
