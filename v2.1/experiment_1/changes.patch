+@pytest.mark.polarion("CNV-61256-03")
+def test_default_common_instancetypes_behavior(admin_client, hco_namespace):
+    """
+    Test default behavior for common-instancetypes deployment.
+
+    Scenario 3: Default Behavior
+    Preconditions: Fresh CNV installation
+    Steps:
+      1. Install CNV without setting commonInstancetypesDeployment
+      2. Check HCO status
+      3. Verify common-instancetypes deployed
+    Expected Result: Default is enabled, instancetypes deployed
+    Priority: P0
+    """
+    LOGGER.info("Verifying default common-instancetypes deployment behavior")
+    hco_resource = get_hyperconverged_resource(client=admin_client, hco_ns_name=hco_namespace.name)
+    hco_spec = hco_resource.instance.spec
+
+    common_instancetypes_deployment = hco_spec.get("commonInstancetypesDeployment")
+    LOGGER.info(f"HCO commonInstancetypesDeployment value: {common_instancetypes_deployment}")
+
+    LOGGER.info("Verifying common-instancetypes are deployed by default")
+    common_instancetypes = get_common_instancetypes(admin_client=admin_client)
+    assert common_instancetypes, (
+        "Common-instancetypes should be deployed by default, "
+        "but no instancetypes found"
+    )
+
+    LOGGER.info(f"Found {len(common_instancetypes)} common-instancetypes (default behavior verified)")
+
