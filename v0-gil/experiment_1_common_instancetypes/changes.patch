+@pytest.mark.polarion("CNV-61256")
+def test_common_instancetypes_deployment_persistence(
+    hyperconverged_resource_scope_function,
+    unprivileged_client,
+):
+    """
+    Test Scenario 4: Verify Setting Persistence Across Reconciliation
+
+    This test validates that the commonInstancetypesDeployment setting persists
+    across HCO reconciliation cycles.
+
+    Test Steps:
+    1. Set commonInstancetypesDeployment: Disabled
+    2. Verify common-instancetypes are removed
+    3. Trigger HCO reconciliation by updating an unrelated field
+    4. Verify common-instancetypes remain disabled
+    5. Verify HCO spec still has Disabled setting
+
+    Expected: Setting persists across reconciliation cycles
+    Bug Behavior: Previously, this field was not configurable
+
+    Validates: CNV-61256 fix - setting persists across HCO reconciliation
+    """
+    # Step 1-2: Disable common-instancetypes
+    LOGGER.info("Disabling common-instancetypes and verifying persistence")
+    with ResourceEditorValidateHCOReconcile(
+        patches={
+            hyperconverged_resource_scope_function: {
+                "spec": {COMMON_INSTANCETYPES_DEPLOYMENT: DEPLOYMENT_DISABLED}
+            }
+        },
+        list_resource_reconcile=[SSP],
+        wait_for_reconcile_post_update=True,
+    ):
+        wait_for_common_instancetypes_state(
+            client=unprivileged_client,
+            expected_state="absent",
+        )
+
+        # Step 3: Trigger reconciliation by updating an unrelated field (e.g., add/update annotation)
+        LOGGER.info("Triggering HCO reconciliation to test persistence")
+        current_annotations = (
+            hyperconverged_resource_scope_function.instance.metadata.get("annotations", {}).copy()
+        )
+        test_annotation = {"test-persistence-annotation": "test-value"}
+        current_annotations.update(test_annotation)
+
+        with ResourceEditorValidateHCOReconcile(
+            patches={
+                hyperconverged_resource_scope_function: {
+                    "metadata": {"annotations": current_annotations}
+                }
+            },
+            list_resource_reconcile=[SSP],
+            wait_for_reconcile_post_update=True,
+        ):
+            # Step 4-5: Verify common-instancetypes remain disabled
+            hyperconverged_resource_scope_function.instance.reload()
+            actual_spec = hyperconverged_resource_scope_function.instance.to_dict()["spec"]
+
+            assert actual_spec.get(COMMON_INSTANCETYPES_DEPLOYMENT) == DEPLOYMENT_DISABLED, (
+                f"Expected {COMMON_INSTANCETYPES_DEPLOYMENT} to persist as {DEPLOYMENT_DISABLED}, "
+                f"but got: {actual_spec.get(COMMON_INSTANCETYPES_DEPLOYMENT)}"
+            )
+
+            # Verify instancetypes are still absent
+            instancetypes = get_common_instancetypes(client=unprivileged_client)
+            assert not instancetypes, (
+                f"Expected common-instancetypes to remain disabled after reconciliation, "
+                f"but found {len(instancetypes)} instances"
+            )
+
+            LOGGER.info("Setting persisted successfully across HCO reconciliation")
