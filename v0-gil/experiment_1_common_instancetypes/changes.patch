+import logging
+
+import pytest
+from ocp_resources.ssp import SSP
+from ocp_resources.virtual_machine_cluster_instancetype import (
+    VirtualMachineClusterInstancetype,
+)
+from timeout_sampler import TimeoutExpiredError, TimeoutSampler
+
+from utilities.constants import TIMEOUT_5MIN
+from utilities.hco import ResourceEditorValidateHCOReconcile
+
+LOGGER = logging.getLogger(__name__)
+
+# Constants for common-instancetypes
+COMMON_INSTANCETYPE_SELECTOR = "instancetype.kubevirt.io/vendor=redhat.com"
+COMMON_INSTANCETYPES_DEPLOYMENT = "commonInstancetypesDeployment"
+DEPLOYMENT_ENABLED = "Enabled"
+DEPLOYMENT_DISABLED = "Disabled"
+
+pytestmark = [pytest.mark.sno, pytest.mark.post_upgrade]
+
+
+def get_common_instancetypes(client):
+    """
+    Get all common instancetypes deployed by SSP.
+
+    Args:
+        client: Kubernetes client
+
+    Returns:
+        list: List of VirtualMachineClusterInstancetype resources with vendor=redhat.com label
+    """
+    return list(
+        VirtualMachineClusterInstancetype.get(
+            client=client,
+            label_selector=COMMON_INSTANCETYPE_SELECTOR,
+        )
+    )
+
+
+def wait_for_common_instancetypes_state(client, expected_state, timeout=TIMEOUT_5MIN):
+    """
+    Wait for common-instancetypes to reach expected state (present or absent).
+
+    Args:
+        client: Kubernetes client
+        expected_state (str): Either "present" or "absent"
+        timeout (int): Timeout in seconds
+
+    Raises:
+        TimeoutExpiredError: If instancetypes don't reach expected state
+    """
+    LOGGER.info(f"Waiting for common-instancetypes to be {expected_state}")
+    sampler = TimeoutSampler(
+        wait_timeout=timeout,
+        sleep=5,
+        func=get_common_instancetypes,
+        client=client,
+    )
+    sample = None
+    try:
+        for sample in sampler:
+            if expected_state == "present" and sample:
+                LOGGER.info(f"Common-instancetypes are present: {len(sample)} found")
+                return sample
+            elif expected_state == "absent" and not sample:
+                LOGGER.info("Common-instancetypes are absent as expected")
+                return []
+    except TimeoutExpiredError:
+        if expected_state == "present":
+            LOGGER.error(f"Expected common-instancetypes to be present but found: {sample}")
+        else:
+            LOGGER.error(f"Expected common-instancetypes to be absent but found {len(sample)} instances")
+        raise
+
