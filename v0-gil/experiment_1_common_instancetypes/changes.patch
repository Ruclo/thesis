+@pytest.mark.polarion("CNV-61256")
+def test_enable_common_instancetypes_deployment(
+    hyperconverged_resource_scope_function,
+    unprivileged_client,
+):
+    """
+    Test Scenario 2: Enable Common-Instancetypes Deployment
+
+    This test validates that common-instancetypes can be explicitly enabled
+    after being disabled.
+
+    Test Steps:
+    1. Disable common-instancetypes first
+    2. Verify common-instancetypes are removed
+    3. Edit HCO CR: set commonInstancetypesDeployment: Enabled
+    4. Wait for HCO reconciliation
+    5. Verify common-instancetype resources are deployed
+
+    Expected: Common-instancetype resources are deployed when enabled
+    Bug Behavior: Previously, this field was not configurable
+
+    Validates: CNV-61256 fix - users can enable common-instancetypes via HCO
+    """
+    # Step 1-2: First disable common-instancetypes
+    LOGGER.info("First disabling common-instancetypes to set up test precondition")
+    with ResourceEditorValidateHCOReconcile(
+        patches={
+            hyperconverged_resource_scope_function: {
+                "spec": {COMMON_INSTANCETYPES_DEPLOYMENT: DEPLOYMENT_DISABLED}
+            }
+        },
+        list_resource_reconcile=[SSP],
+        wait_for_reconcile_post_update=True,
+    ):
+        wait_for_common_instancetypes_state(
+            client=unprivileged_client,
+            expected_state="absent",
+        )
+
+        # Step 3-4: Now enable common-instancetypes
+        LOGGER.info("Enabling common-instancetypes deployment via HCO CR")
+        with ResourceEditorValidateHCOReconcile(
+            patches={
+                hyperconverged_resource_scope_function: {
+                    "spec": {COMMON_INSTANCETYPES_DEPLOYMENT: DEPLOYMENT_ENABLED}
+                }
+            },
+            list_resource_reconcile=[SSP],
+            wait_for_reconcile_post_update=True,
+        ):
+            # Step 5: Verify common-instancetypes are deployed
+            instancetypes = wait_for_common_instancetypes_state(
+                client=unprivileged_client,
+                expected_state="present",
+            )
+
+            assert len(instancetypes) > 0, (
+                "Expected common-instancetypes to be deployed when enabled, but none were found"
+            )
+
+            # Additional verification: check HCO spec reflects the change
+            hyperconverged_resource_scope_function.instance.reload()
+            actual_spec = hyperconverged_resource_scope_function.instance.to_dict()["spec"]
+            assert actual_spec.get(COMMON_INSTANCETYPES_DEPLOYMENT) == DEPLOYMENT_ENABLED, (
+                f"HCO spec should have {COMMON_INSTANCETYPES_DEPLOYMENT}: {DEPLOYMENT_ENABLED}, "
+                f"but got: {actual_spec.get(COMMON_INSTANCETYPES_DEPLOYMENT)}"
+            )
+
+            LOGGER.info(f"Successfully enabled common-instancetypes deployment: {len(instancetypes)} found")
+
