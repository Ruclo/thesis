+@pytest.mark.polarion("CNV-61256")
+def test_common_instancetypes_deployment_default_behavior(
+    hco_spec,
+    unprivileged_client,
+):
+    """
+    Test Scenario 3: Verify Default Behavior
+
+    This test validates that the default behavior is to deploy common-instancetypes
+    when no explicit configuration is provided.
+
+    Test Steps:
+    1. Check HCO CR for commonInstancetypesDeployment field
+    2. Verify common-instancetypes are deployed
+    3. Confirm default behavior is Enabled
+
+    Expected: By default, common-instancetypes are deployed (Enabled)
+    Bug Behavior: Previously, this field was not configurable
+
+    Validates: CNV-61256 fix - default behavior is preserved (enabled)
+    """
+    # Step 1: Check HCO spec for the field
+    deployment_setting = hco_spec.get(COMMON_INSTANCETYPES_DEPLOYMENT)
+    LOGGER.info(f"HCO {COMMON_INSTANCETYPES_DEPLOYMENT} setting: {deployment_setting}")
+
+    # Step 2: Verify common-instancetypes are deployed
+    instancetypes = get_common_instancetypes(client=unprivileged_client)
+    assert instancetypes, (
+        "Expected common-instancetypes to be deployed by default, but none were found. "
