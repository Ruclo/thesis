+@pytest.mark.polarion("CNV-61256")
+def test_disable_common_instancetypes_deployment(
+    hyperconverged_resource_scope_function,
+    unprivileged_client,
+    hco_spec,
+):
+    """
+    Test Scenario 1: Disable Common-Instancetypes Deployment
+
+    This test reproduces the scenario where users want to disable common-instancetypes
+    deployment to use their own custom instancetypes instead.
+
+    Test Steps:
+    1. Verify common-instancetypes are deployed (default state)
+    2. Edit HCO CR: set commonInstancetypesDeployment: Disabled
+    3. Wait for HCO reconciliation
+    4. Verify all common-instancetype resources are removed
+
+    Expected: All common-instancetype resources are removed when disabled
+    Bug Behavior: Previously, this field was not configurable
+
+    Validates: CNV-61256 fix - users can disable common-instancetypes via HCO
+    """
+    # Step 1: Verify common-instancetypes exist initially
+    initial_instancetypes = get_common_instancetypes(client=unprivileged_client)
+    assert initial_instancetypes, (
+        "Expected common-instancetypes to be present initially, "
+        "but none were found. This is the default state."
+    )
+    LOGGER.info(f"Initial state: {len(initial_instancetypes)} common-instancetypes found")
+
+    # Step 2-3: Disable common-instancetypes via HCO CR
+    LOGGER.info("Disabling common-instancetypes deployment via HCO CR")
+    with ResourceEditorValidateHCOReconcile(
+        patches={
+            hyperconverged_resource_scope_function: {
+                "spec": {COMMON_INSTANCETYPES_DEPLOYMENT: DEPLOYMENT_DISABLED}
+            }
+        },
+        list_resource_reconcile=[SSP],
+        wait_for_reconcile_post_update=True,
+    ):
+        # Step 4: Verify common-instancetypes are removed
+        wait_for_common_instancetypes_state(
+            client=unprivileged_client,
+            expected_state="absent",
+        )
+
+        # Additional verification: check HCO spec reflects the change
+        hyperconverged_resource_scope_function.instance.reload()
+        actual_spec = hyperconverged_resource_scope_function.instance.to_dict()["spec"]
+        assert actual_spec.get(COMMON_INSTANCETYPES_DEPLOYMENT) == DEPLOYMENT_DISABLED, (
+            f"HCO spec should have {COMMON_INSTANCETYPES_DEPLOYMENT}: {DEPLOYMENT_DISABLED}, "
+            f"but got: {actual_spec.get(COMMON_INSTANCETYPES_DEPLOYMENT)}"
+        )
+
+        LOGGER.info("Successfully disabled common-instancetypes deployment")
+
+    # After context manager exits, verify restoration (common-instancetypes re-enabled)
+    LOGGER.info("Verifying common-instancetypes are restored after test cleanup")
+    wait_for_common_instancetypes_state(
+        client=unprivileged_client,
+        expected_state="present",
+    )
+
