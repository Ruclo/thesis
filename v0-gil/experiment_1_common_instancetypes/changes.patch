+    )
+    LOGGER.info(f"Default state verified: {len(instancetypes)} common-instancetypes found")
+
+    # Step 3: Verify default is Enabled (either explicitly set or implicit default)
+    # If the field is not set, the default behavior should be Enabled
+    if deployment_setting is not None:
+        assert deployment_setting == DEPLOYMENT_ENABLED, (
+            f"Expected default {COMMON_INSTANCETYPES_DEPLOYMENT} to be {DEPLOYMENT_ENABLED}, "
+            f"but got: {deployment_setting}"
+        )
+        LOGGER.info(f"Default setting is explicitly {DEPLOYMENT_ENABLED}")
+    else:
+        # Field not set, but instancetypes exist, so default behavior is Enabled
+        LOGGER.info(f"Field {COMMON_INSTANCETYPES_DEPLOYMENT} not explicitly set, but default behavior is Enabled")
+
