+@pytest.mark.polarion("CNV-61256-4")
+def test_common_instancetypes_setting_persistence(
+    admin_client,
+    hco_namespace,
+    hyperconverged_resource_scope_function,
+):
+    """
+    Test that commonInstancetypesDeployment setting persists across HCO reconciliation.
+
+    Verifies that the disabled state remains after HCO reconciles other changes.
+    """
+    # Disable common-instancetypes
+    with ResourceEditorValidateHCOReconcile(
+        patches={
+            hyperconverged_resource_scope_function: {
+                "spec": {"commonInstancetypesDeployment": "Disabled"}
+            }
+        },
+        list_resource_reconcile=[SSP],
+        wait_for_reconcile_post_update=True,
+    ):
+        # Wait for instancetypes to be removed
+        wait_for_common_instancetypes_state(admin_client=admin_client, should_exist=False)
+
+        # Trigger HCO reconciliation by updating another field
+        with ResourceEditorValidateHCOReconcile(
+            patches={
+                hyperconverged_resource_scope_function: {
+                    "metadata": {"labels": {"test-persistence": "true"}}
+                }
+            },
+            list_resource_reconcile=[SSP],
+            wait_for_reconcile_post_update=True,
+        ):
+            # Verify common-instancetypes remain disabled after reconciliation
+            instancetypes_after_reconcile = get_common_instancetypes(admin_client=admin_client)
+            assert not instancetypes_after_reconcile, (
+                "Common-instancetypes should remain disabled after HCO reconciliation, "
+                f"but found {len(instancetypes_after_reconcile)}"
+            )
+            LOGGER.info("Setting persistence verified: common-instancetypes remain disabled after reconciliation")
