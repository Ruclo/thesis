+@pytest.mark.polarion("CNV-61256-3")
+def test_common_instancetypes_default_behavior(admin_client):
+    """
+    Test default behavior for common-instancetypes.
+
+    Verifies that by default (without explicitly setting commonInstancetypesDeployment),
