+"""
+Tests for CommonInstancetypesDeployment HCO feature.
+
+This module tests the ability to enable/disable common-instancetypes
+deployment via the HyperConverged CR spec.commonInstancetypesDeployment field.
+"""
+
+import logging
+
+import pytest
+from ocp_resources.resource import Resource
+from ocp_resources.ssp import SSP
+from ocp_resources.virtual_machine_cluster_instancetype import (
+    VirtualMachineClusterInstancetype,
+)
+from timeout_sampler import TimeoutExpiredError, TimeoutSampler
+
+from utilities.constants import TIMEOUT_5MIN
+from utilities.hco import ResourceEditorValidateHCOReconcile
+
+pytestmark = [pytest.mark.sno, pytest.mark.post_upgrade]
+LOGGER = logging.getLogger(__name__)
+COMMON_INSTANCETYPE_SELECTOR = f"{Resource.ApiGroup.INSTANCETYPE_KUBEVIRT_IO}/vendor=redhat.com"
+
+
+def get_common_instancetypes(admin_client):
+    """
+    Get all common-instancetypes resources.
+
+    Args:
+        admin_client: DynamicClient instance
+
+    Returns:
+        list: List of VirtualMachineClusterInstancetype resources with vendor label
+    """
+    return list(
+        VirtualMachineClusterInstancetype.get(
+            client=admin_client,
+            label_selector=COMMON_INSTANCETYPE_SELECTOR,
+        )
+    )
+
+
+def wait_for_common_instancetypes_state(admin_client, should_exist, timeout=TIMEOUT_5MIN):
+    """
+    Wait for common-instancetypes to reach expected state (present or absent).
+
+    Args:
+        admin_client: DynamicClient instance
+        should_exist (bool): True if instancetypes should be present, False if absent
+        timeout: Timeout in seconds
+
+    Raises:
+        TimeoutExpiredError: If instancetypes don't reach expected state within timeout
+    """
+    LOGGER.info(f"Waiting for common-instancetypes to {'exist' if should_exist else 'be removed'}")
+    try:
+        for sample in TimeoutSampler(
+            wait_timeout=timeout,
+            sleep=10,
+            func=get_common_instancetypes,
+            admin_client=admin_client,
+        ):
+            instancetypes_exist = len(sample) > 0
+            if instancetypes_exist == should_exist:
+                LOGGER.info(
+                    f"Common-instancetypes state verified: "
+                    f"{'present' if should_exist else 'absent'} (count: {len(sample)})"
+                )
+                return
+    except TimeoutExpiredError:
+        LOGGER.error(
+            f"Timeout waiting for common-instancetypes to {'exist' if should_exist else 'be removed'}. "
+            f"Current count: {len(get_common_instancetypes(admin_client=admin_client))}"
+        )
+        raise
+
