+"""
+Windows Guest Agent OS/Hostname Info Display Tests
+
+STP Reference: ../thesis/stps/7.md
+Jira: CNV-61262, CNV-56888
+PR: https://github.com/kubevirt/kubevirt/pull/14232
+
+This module contains tests verifying that Windows VMs correctly display
+OS version and hostname information when qemu-guest-agent is running.
+
+Bug Fix: Ensures domain.Status.OSInfo is not empty despite guest agent
+reporting correctly, preventing false "Guest Agent Required" messages.
+"""
+
+import logging
+
+import pytest
+from pyhelper_utils.shell import run_ssh_commands
+
+from utilities.constants import TIMEOUT_6MIN
+from utilities.ssp import get_windows_os_info, validate_os_info_vmi_vs_windows_os
+from utilities.virt import (
+    get_guest_os_info,
+    guest_reboot,
+    running_vm,
+    wait_for_user_agent_down,
+)
+
+LOGGER = logging.getLogger(__name__)
+
+
+pytestmark = [
+    pytest.mark.gating,
+    pytest.mark.post_upgrade,
+    pytest.mark.special_infra,
+    pytest.mark.high_resource_vm,
+]
+
+
+class TestWindowsGuestAgentOSInfo:
+    """
+    Tests for Windows guest agent OS and hostname information display.
+
+    Markers:
+        - gating
+        - post_upgrade
+
+    Preconditions:
+        - Windows VM with qemu-guest-agent installed
+        - virtio-serial driver installed for guest-host communication
+        - Guest agent service running
+    """
+
+    @pytest.mark.polarion("CNV-61262")
+    def test_windows_os_version_display(self, windows_vm_with_guest_agent):
+        """
+        Test that Windows OS version is displayed correctly when guest agent is running.
+
+        Steps:
+            1. Get VMI status guestOSInfo field
+            2. Verify OS info is populated (not empty)
+            3. Compare VMI OS info with actual Windows OS version from guest
+
+        Expected:
+            - VMI guestOSInfo field is not empty
+            - OS version matches Windows version reported by guest OS
+            - No "Guest Agent Required" message displayed
+        """
+        LOGGER.info("Testing Windows OS version display with guest agent")
+
+        vm = windows_vm_with_guest_agent
+        vmi = vm.vmi
+
+        LOGGER.info("Getting VMI guest OS info")
+        vmi_os_info = get_guest_os_info(vmi=vmi)
+
+        LOGGER.info(f"VMI OS Info: {vmi_os_info}")
+        assert vmi_os_info, "VMI guestOSInfo should not be empty when guest agent is running"
+        assert vmi_os_info.get("id"), "VMI guestOSInfo should contain 'id' field"
+
+        LOGGER.info("Validating OS info matches between VMI and Windows guest")
+        validate_os_info_vmi_vs_windows_os(vm=vm)
+
+        LOGGER.info("OS version display test passed")
+
+    @pytest.mark.polarion("CNV-61262")
+    def test_windows_hostname_display(self, windows_vm_with_guest_agent):
+        """
+        Test that Windows hostname is displayed correctly when guest agent is running.
+
+        Steps:
+            1. Get VMI status guestOSInfo field
+            2. Verify hostname is populated
+            3. Get actual hostname from Windows guest OS
+            4. Compare VMI hostname with guest OS hostname
+
+        Expected:
+            - VMI guestOSInfo contains hostname field
+            - Hostname matches the actual Windows hostname
+        """
+        LOGGER.info("Testing Windows hostname display with guest agent")
+
+        vm = windows_vm_with_guest_agent
+        vmi = vm.vmi
+
+        LOGGER.info("Getting VMI guest OS info")
+        vmi_os_info = get_guest_os_info(vmi=vmi)
+
+        assert vmi_os_info, "VMI guestOSInfo should not be empty"
+        assert "hostname" in vmi_os_info, "VMI guestOSInfo should contain hostname field"
+
+        vmi_hostname = vmi_os_info["hostname"]
+        LOGGER.info(f"VMI hostname: {vmi_hostname}")
+
+        LOGGER.info("Getting actual hostname from Windows guest")
+        windows_info = get_windows_os_info(ssh_exec=vm.ssh_exec)
+        guest_hostname = windows_info["os"]["hostname"]
+        LOGGER.info(f"Guest OS hostname: {guest_hostname}")
+
+        assert vmi_hostname in guest_hostname, (
+            f"VMI hostname '{vmi_hostname}' should match guest hostname '{guest_hostname}'"
+        )
+
+        LOGGER.info("Hostname display test passed")
+
+    @pytest.mark.polarion("CNV-61262")
+    def test_osinfo_persistence_after_vm_reboot(self, windows_vm_with_guest_agent):
+        """
+        Test that OS and hostname info persists and is restored after VM reboot.
+
+        Preconditions:
+            - Windows VM running with OS/hostname info displayed
+
+        Steps:
+            1. Verify OS info is displayed before reboot
+            2. Reboot the Windows VM (guest restart)
+            3. Wait for VM to become running
+            4. Wait for guest agent to reconnect
+            5. Verify OS info is displayed again
+
+        Expected:
+            - OS info is displayed before reboot
+            - OS info is restored and displayed after reboot
+            - No "Guest Agent Required" message after reboot
+        """
+        LOGGER.info("Testing OS info persistence after VM reboot")
+
+        vm = windows_vm_with_guest_agent
+        vmi = vm.vmi
+
+        LOGGER.info("Verifying OS info is displayed before reboot")
+        os_info_before = get_guest_os_info(vmi=vmi)
+        assert os_info_before, "OS info should be available before reboot"
+        assert os_info_before.get("id"), "OS info should contain 'id' before reboot"
+
+        os_id_before = os_info_before.get("id")
+        hostname_before = os_info_before.get("hostname")
+        LOGGER.info(f"OS info before reboot - ID: {os_id_before}, Hostname: {hostname_before}")
+
+        LOGGER.info("Rebooting Windows VM")
+        guest_reboot(vm=vm, os_type="windows")
+
+        LOGGER.info("Waiting for VM to become running after reboot")
+        running_vm(vm=vm)
+
+        LOGGER.info("Waiting for guest agent to reconnect and report OS info")
+        os_info_after = get_guest_os_info(vmi=vmi)
+
+        assert os_info_after, "OS info should be available after reboot"
+        assert os_info_after.get("id"), "OS info should contain 'id' after reboot"
+
+        os_id_after = os_info_after.get("id")
+        hostname_after = os_info_after.get("hostname")
+        LOGGER.info(f"OS info after reboot - ID: {os_id_after}, Hostname: {hostname_after}")
+
+        assert os_id_after == os_id_before, "OS ID should remain the same after reboot"
+        assert hostname_after == hostname_before, "Hostname should remain the same after reboot"
+
+        LOGGER.info("OS info persistence test passed")
+
+    @pytest.mark.polarion("CNV-61262")
+    def test_osinfo_after_guest_agent_restart(self, windows_vm_with_guest_agent):
+        """
+        Test that OS info appears when guest agent service is started.
+
+        Preconditions:
+            - Windows VM running with qemu-guest-agent service stopped
+
+        Steps:
+            1. Stop qemu-guest-agent service in guest
+            2. Verify VMI guestOSInfo is empty or shows "Guest Agent Required"
+            3. Start qemu-guest-agent service in guest
+            4. Wait for agent to report
+            5. Verify OS info is now displayed
+
+        Expected:
+            - OS info appears after agent starts
+            - VMI guestOSInfo is populated with correct OS version and hostname
+        """
+        LOGGER.info("Testing OS info availability after guest agent restart")
+
+        vm = windows_vm_with_guest_agent
+        vmi = vm.vmi
+
+        LOGGER.info("Verifying OS info is initially available")
+        initial_os_info = get_guest_os_info(vmi=vmi)
+        assert initial_os_info, "OS info should be available initially"
+
+        LOGGER.info("Stopping qemu-guest-agent service in Windows guest")
+        stop_command = "Stop-Service -Name 'QEMU Guest Agent'"
+        run_ssh_commands(host=vm.ssh_exec, commands=[stop_command])
+
+        LOGGER.info("Waiting for guest agent to stop reporting")
+        wait_for_user_agent_down(vm=vm, timeout=TIMEOUT_6MIN)
+
+        LOGGER.info("Starting qemu-guest-agent service in Windows guest")
+        start_command = "Start-Service -Name 'QEMU Guest Agent'"
+        run_ssh_commands(host=vm.ssh_exec, commands=[start_command])
+
+        LOGGER.info("Waiting for guest agent to reconnect and report OS info")
+        restored_os_info = get_guest_os_info(vmi=vmi)
+
+        assert restored_os_info, "OS info should be available after restarting agent"
+        assert restored_os_info.get("id"), "OS info should contain 'id' after agent restart"
+        assert restored_os_info.get("hostname"), "OS info should contain hostname after agent restart"
+
+        LOGGER.info(f"Restored OS info - ID: {restored_os_info.get('id')}, "
+                   f"Hostname: {restored_os_info.get('hostname')}")
+
+        LOGGER.info("Guest agent restart test passed")
+
